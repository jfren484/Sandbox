<Window x:Class="Symphony_Sprint.HighScoreWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Symphony_Sprint"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HighScorePage">

    <Canvas Background="Black">
        <StackPanel HorizontalAlignment="Center" Width="800">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                <Image Source="Graphics/highScores-1.png.png" Width="600" Margin="30"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <StackPanel Orientation="Vertical" Margin="20">
                        <TextBlock Text="Rank"  FontFamily="SH Pinscher" FontSize="40" Foreground="White"/>
                        <TextBlock x:Name="Rank"/>
                    </StackPanel >
                    <StackPanel Orientation="Vertical" Margin="20">
                        <TextBlock Text="Name"  FontFamily="SH Pinscher" FontSize="40" Foreground="White"/>
                        <TextBlock x:Name="Name"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Margin="20">
                        <TextBlock Text="Score" FontFamily="SH Pinscher" FontSize="40" Foreground="White"/>
                        <TextBlock x:Name="Score"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Canvas>
</Window>
