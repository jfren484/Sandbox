<Window x:Class="Symphony_Sprint.HighScoreWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Symphony_Sprint"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HighScorePage">

    <Canvas Background="Black">
        <StackPanel HorizontalAlignment="Center" Width="800">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Image Source="Graphics/highScores-1.png.png" Width="600" Margin="30"/>
                <TextBlock Text="{Binding Path=HighScoreText}" FontFamily="SH Pinscher" FontSize="25" Foreground="White"/>
            </StackPanel>
        </StackPanel>
    </Canvas>
</Window>
