<Window x:Class="Symphony_Sprint.Properties.Help"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Symphony_Sprint.Properties"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Help"
      Loaded="Window_Loaded">

    <Canvas Background="Black" Height="450" Margin="0,0,0,-0.4" VerticalAlignment="Bottom">
        <StackPanel x:Name="vPanel" HorizontalAlignment="Center" Width="800">
            <Image Source="Graphics/help-1.png.png" Height="90" Margin="0,10,0,0"/>
            <TextBlock x:Name="txtHelp" Height="330" FontSize="20" TextAlignment="Left" Margin="25,5,25,10" Foreground="WHite"/>
        </StackPanel>
    </Canvas>
</Window>
