<Window x:Class="Symphony_Sprint.HighScoreEnter"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Symphony_Sprint"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="HighScoreEnter">
    <!--Loaded="Window_Loaded">-->
    <Canvas Background="Black">
        <StackPanel HorizontalAlignment="Center" Width="800">
                <Image Source="Graphics/highScore-1.png.png" Width="600" Margin="50"/>
            <TextBlock x:Name="gameScore" Text="{Binding Path=GameScore}" FontFamily="SH Pinscher" FontSize="75" Foreground="White" HorizontalAlignment="Center"/>
            <TextBlock Text="Please enter your name:" FontFamily="SH Pinscher" FontSize="25" Foreground="White" HorizontalAlignment="Center"/>
            <TextBox x:Name="playerName" Width="350" Height="50" Margin="20" FontFamily="SH Pinscher" FontSize="40"/>
            <Button Width="200" FontSize="45" Margin="20" Click="Button_Click">
                <Image Source="Graphics/submit-1.png (1).png"/>
            </Button>
        </StackPanel>
    </Canvas>
</Window>
