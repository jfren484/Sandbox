<Window x:Class="Battleship.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Battleship"
        mc:Ignorable="d"
        Title="GameWindow" Height="650"  Loaded="Window_Loaded">
    <StackPanel HorizontalAlignment="Center">
        <StackPanel x:Name="playerPanel" Margin="10">
            <DockPanel>
                <TextBlock x:Name="txtPlayer" Text="Player" TextAlignment="Center"
                    FontSize="25" FontFamily="Century Gothic" FontWeight="Bold" />
                <TextBlock x:Name="lblTimer" Text="5.0" FontFamily="Century Gothic" FontSize="25" HorizontalAlignment="Right"></TextBlock>
            </DockPanel>
        </StackPanel>
        <Rectangle Height="1" Width="Auto" Stroke="Black" Margin="30,10,30,0" VerticalAlignment="Bottom"/>
        <StackPanel x:Name="aiPanel" Margin="10">
            <DockPanel>
                <TextBlock x:Name="txtAi" Text="AI" FontSize="25" FontFamily="Century Gothic" FontWeight="Bold"/>
                <TextBlock x:Name="lblThinking" Text="" FontFamily="Century Gothic" FontSize="25" HorizontalAlignment="Right"></TextBlock>
            </DockPanel>
        </StackPanel>
    </StackPanel>
</Window>
