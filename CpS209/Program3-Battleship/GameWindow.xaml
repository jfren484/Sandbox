<Window x:Class="Battleship.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Battleship"
        mc:Ignorable="d"
        Title="GameWindow" Height="650"  Loaded="Window_Loaded">
    <StackPanel>
        <StackPanel x:Name="aiPanel" Margin="10">
            <TextBlock x:Name="txtAi" Text="AI" TextAlignment="Center" Margin="10"
                       FontSize="25" FontFamily="Century Gothic" FontWeight="Bold"></TextBlock>
        </StackPanel>
        <Rectangle Height="1" Width="Auto" Stroke="Black"
                   Margin="30,30,30,10" VerticalAlignment="Bottom"></Rectangle>
        <StackPanel x:Name="playerPanel" Margin="10">
            <TextBlock x:Name="txtPlayer" Text="Player" TextAlignment="Center" Margin="10"
                       FontSize="25" FontFamily="Century Gothic" FontWeight="Bold"></TextBlock>
        </StackPanel>
    </StackPanel>
    

</Window>
