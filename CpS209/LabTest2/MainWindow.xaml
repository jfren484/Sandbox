<Window x:Class="labtest2practice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:labtest2practice"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="grdGrid">
        <TextBox x:Name="txtBox" FontSize="20" Width="75" Height="30" Margin="0,20,0,0" VerticalAlignment="Top">
            
        </TextBox>
        <Label x:Name="lblLabel" FontSize="20" Width="75" Height="30" Margin="0,65,0,0" VerticalAlignment="Top">
            
        </Label>
        <Button x:Name="btnCalculate" Content="Calculate" Height ="30" Width="75" VerticalAlignment="Top" Margin="0,115,0,0" Click="btnCalculate_Click">
            
        </Button>
        <Button x:Name="btnCreate" Content="Create" Width="75" Height="30" Margin="0,165,0,0" VerticalAlignment="Top" Click="btnCreate_Click">

        </Button>

        <Button x:Name="btnAnimate" Content="Animate" Width="75" Height="30" Margin="0,40,0,0" Click="btnAnimate_Click">

        </Button>
    </Grid>
</Window>