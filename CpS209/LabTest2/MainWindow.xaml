<Window x:Class="LabTest2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabTest2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="gridMain">
        <TextBox x:Name="txtNumber" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lblTotal" Content="{Binding Path=CalculatedValue}" HorizontalAlignment="Left" Margin="10,38,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnCalc" Content="Calculate" HorizontalAlignment="Left" Margin="146,10,0,0" VerticalAlignment="Top" Width="75" Click="BtnCalc_Click"/>
        <Button x:Name="btnCreate" Content="Create" HorizontalAlignment="Left" Margin="263,10,0,0" VerticalAlignment="Top" Width="75" Click="BtnCreate_Click"/>
        <Button x:Name="btnAnimate" Content="Animate" HorizontalAlignment="Left" Margin="343,10,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
